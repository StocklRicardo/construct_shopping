<div class="container">
  <div class="row">
    <%= form_for @ad, :url=> {:action => "create"} do |f| %>
      <div class="form-group boots ">
        <%= f.label :title %><br>
          <%= f.text_field :title, placeholder: "Create your Ad" ,class: "form-control" ,
            id:"exampleFormControlInput1"%>
      </div>
      <div class="form-group boots">
        <%= f.label :price %>
          <%=f.text_field :price, class: "form-control" , id:"exampleFormControlInput1" %>
      </div>
      <div class="form-group boots">
        <%= f.label :description %><br>
          <%= f.text_area :description, placeholder: "Create your Ad" ,class: "form-control" ,
            id:"exampleFormControlInput1" %><br>
            <%= f.hidden_field(:category_id, value: params["category_id"]) %>

      </div>
      <%= f.submit "Create" %>

        <% end %>
          <%= link_to 'Home' , ads_path %>
  </div>
</div>