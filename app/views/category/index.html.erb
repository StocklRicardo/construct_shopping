<table class="table table-striped table-dark">
	<thead>
		<tr>
			<th scope="col">
				<%= link_to 'New' , new_category_path %><br>
			</th>
			<th scope="col">

			</th>
			<th scope="col"></th>
			<th scope="col">
				<%= link_to 'Logout' , destroy_user_session_path, method: :delete %>
			</th>
		</tr>
	</thead>
	<tbody>
		<% @categories.each do |category| %>
			<tr>
				<th scope="row">
					<%= category.name %>
				<td>
					<%= link_to 'Edit' , edit_category_path(category.id) %>
				</td>
				<td>
					<%= link_to 'Delete' , category_path(category), method: :delete %>
				</td>
				<td>
					<%= link_to 'Show' , category_path(category.id) %><br>
				</td>
			</tr>
			<% end %>
	</tbody>
</table>